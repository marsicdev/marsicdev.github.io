{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@data/*": ["src/data/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@content/*": ["src/content/*"],
            "@schemas/*": ["src/schemas/*"],
            "@styles/*": ["src/styles/*"]
        }
    }
}
