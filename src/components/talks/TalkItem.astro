---
import Quote from "@components/ui/Quote.astro"
import type { CollectionEntry } from "astro:content"

type Props = {
    talk: CollectionEntry<"talks">
}

const { talk } = Astro.props
const { title, summary, date, location, slidesUrl, youTubeId, event, eventUrl } = talk.data
---

<article style="margin: 0.5rem 0px;">
    <h2 style="margin: 0.5rem 0px;">
        {title}
    </h2>
    <Quote>{summary}</Quote>
    <small>
        📍 <a href={eventUrl}>{event}, {location}</a> · 🗓️ {date} · 🎞️ <a href={slidesUrl} target="_blank">Slides</a> ·
        {
            youTubeId && (
                <a href={youTubeId} target="_blank">
                    📺 Video
                </a>
            )
        }
    </small>
</article>
